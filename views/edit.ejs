<% layout('layout/boilerplate') %>

<div class="row">
    <h1 class="text-center">Edit post</h1>
    <div class="col-6 offset-3">
        
        <form action="/posts/<%=posts._id%>?_method=PUT" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">What are you thinking?</label>
                <input class="form-control" type="text" id="title" name="post[title]" value="<%=posts.title%>" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label" for="description">Add some description</label>
                <input class="form-control" type="text" id="description" name="post[description]" value="<%=posts.description%>" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <div class="form-file custom-file">
                    <input class="form-control form-file-input" type="file" id="image" name="image" multiple>
                    <label for="image" class="form-file-label">
                        <p class="form-file-text custom-file-label"></p>
                    </label>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
            </div>
            <div class="row row-cols-1 row-cols-md-4 g-4 mb-3">
                <% posts.images.forEach(function(img, i){%>
                    <div class="col">
                        <div class="card">
                            <img src="<%= img.thumbnail %>" class="img-thumbnail" alt="">
                            <div class="card-img-overlay text-end pt-1 pe-2">
                                <label for="image-<%= i%>"></label>
                                <input type="checkbox" name="deleteImages[]" value="<%=img.filename%>" id="image-<%= i%>"> 
                            </div>
                        </div>
                    </div>
                <%})%>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Update</button>
                <a href="/posts" class="btn btn-primary">Go back</a>
            </div>
        </form>
        
        
    </div>
</div>

