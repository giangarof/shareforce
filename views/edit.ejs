<% layout('layout/boilerplate') %>

    <form action="/posts/<%=posts._id%>?_method=PUT" method="POST">
        <div>
            <label for="title">What are you thinking?</label>
            <input type="text" id="title" name="posts[title]" value="<%=posts.title%>">
        </div>
        <div>
            <label for="description">Add some description</label>
            <input type="text" id="description" name="posts[description]" value="<%=posts.description%>">
        </div>
        <button>Update existing post</button>
    </form>

    <footer>
        <a href="/posts">Go back</a>
    </footer>
