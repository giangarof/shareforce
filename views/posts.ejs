<% layout('layout/boilerplate') %>

    <h1>All posts</h1>

    <div>
        <a href="/posts/new">Add</a>
    </div>

    <ul>
        <% for (let post of posts){%>
        <li>
            <a href="/posts/<%= post._id %>"><%= post.title %>,  <%= post.description %></a>
        </li>
        <% } %>
    </ul>
